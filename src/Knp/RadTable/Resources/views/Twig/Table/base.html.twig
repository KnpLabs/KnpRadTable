{% block _node_outter %}
{% spaceless %}
{% if node.vars.debug is defined and node.vars.debug == true %}
<!-- {{ node.vars.blocks|join(', ') }}  -->
{% endif %}
{{ ('<' ~ node.vars.tag ~ '>')|raw }}
    {{ knp_table_inner(node) }}
{{ ('</' ~ node.vars.tag ~ '>')|raw }}
