{% block _table_inner %}
{% spaceless %}
<thead>
    {{ knp_table_outter(node.headers) }}
</thead>
<tbody>
{% for row in node.rows %}
{{ knp_table_outter(row) }}
{% endfor %}
</tbody>
{{ knp_table_outter(node.footer) }}
{% endspaceless %}
{% endblock _table_inner %}

